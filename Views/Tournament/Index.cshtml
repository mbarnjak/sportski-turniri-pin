@using Turniri.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<TournamentViewModel>
@{
    ViewData["Title"] = "Sportski turniri";
    Layout = null;
}
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sportski turniri</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#10b981',
                        secondary: '#059669',
                        accent: '#f59e0b',
                        dark: '#0f172a',
                        'dark-lighter': '#1e293b',
                        'gray-custom': '#64748b',
                    }
                }
            }
        }
    </script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');

        * {
            font-family: 'Inter', sans-serif;
            font-size: 16px;
        }

        html {
            font-size: 16px;
        }

        body {
            font-size: 16px;
            line-height: 1.5;
        }

        h1 {
            font-size: 1.875rem !important;
        }

        h2 {
            font-size: 1.5rem !important;
        }

        h3 {
            font-size: 1.25rem !important;
        }

        p, span, a, button, input, label {
            font-size: 1rem !important;
        }

        .hero-gradient {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        }

        .btn-primary {
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
            }

        svg.w-5.h-5 {
            width: 1.25rem !important;
            height: 1.25rem !important;
            max-width: 1.25rem !important;
            max-height: 1.25rem !important;
        }

        .turnir-card {
            transition: all 0.3s ease;
        }

            .turnir-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }
    </style>
</head>
<body class="bg-dark text-white min-h-screen flex flex-col">
    <!-- Header -->
    <header class="hero-gradient border-b border-dark-lighter">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="max-width: 20px; max-height: 20px;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h1 class="text-2xl font-bold text-white">Sportski turniri</h1>
                </div>

                <div class="flex items-center gap-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-gray-custom">@User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="text-gray-custom hover:text-white transition-colors">
                                Odjavi se
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn-primary bg-primary hover:bg-secondary text-dark font-semibold px-6 py-2.5 rounded-lg">
                            Prijava
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-gradient py-12 sm:py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
                <div>
                    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-2">
                        Dostupni turniri
                    </h2>
                    <p class="text-gray-custom">Pronađi i prijavi se na turnir koji te zanima</p>
                </div>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-action="Create" class="btn-primary bg-accent hover:bg-yellow-500 text-dark font-bold px-6 py-3 rounded-lg whitespace-nowrap">
                        + Objavi turnir
                    </a>
                }
            </div>
        </div>
    </section>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
            <div class="bg-green-500/20 border border-green-500/50 text-green-400 px-4 py-3 rounded-lg">
                @TempData["Success"]
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
            <div class="bg-red-500/20 border border-red-500/50 text-red-400 px-4 py-3 rounded-lg">
                @TempData["Error"]
            </div>
        </div>
    }

    <!-- Turniri Grid -->
    <section class="py-12 bg-dark">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

                @foreach (var turnir in Model)
                {
                    <div class="turnir-card bg-dark-lighter border border-gray-custom/20 rounded-xl p-6 hover:border-primary">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <h3 class="text-xl font-bold text-white mb-1">@turnir.Naziv</h3>
                                <div class="flex items-center gap-2 text-gray-custom text-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <span>@turnir.OrganizatorIme</span>
                                </div>
                            </div>
                            <span class="bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-medium">
                                @turnir.Sport
                            </span>
                        </div>

                        <div class="space-y-3 mb-6">
                            <div class="flex items-center gap-3 text-gray-custom">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="text-white font-medium">@turnir.Datum.ToString("dddd, dd.MM.yyyy.", new System.Globalization.CultureInfo("hr-HR"))</span>
                            </div>

                            <div class="flex items-center gap-3 text-gray-custom">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span class="text-white font-medium">@turnir.Vrijeme.ToString(@"hh\:mm")</span>
                            </div>

                            <div class="flex items-center gap-3 text-gray-custom">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                <span class="text-white font-medium">@turnir.BrojPrijavljenih / @turnir.BrojIgraca igrača</span>
                            </div>
                        </div>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (turnir.JePrijavljen)
                            {
                                <form asp-action="Unregister" method="post" class="w-full">
                                    <input type="hidden" name="id" value="@turnir.Id" />
                                    <button type="submit" class="w-full btn-primary bg-red-500 hover:bg-red-600 text-white font-bold py-3 rounded-lg">
                                        Odjavi se
                                    </button>
                                </form>
                            }
                            else if (turnir.JePun)
                            {
                                <button class="w-full btn-primary bg-gray-600 text-white font-bold py-3 rounded-lg cursor-not-allowed" disabled>
                                    Turnir je pun
                                </button>
                            }
                            else
                            {
                                <form asp-action="Register" method="post" class="w-full">
                                    <input type="hidden" name="id" value="@turnir.Id" />
                                    <button type="submit" class="w-full btn-primary bg-primary hover:bg-secondary text-dark font-bold py-3 rounded-lg">
                                        Prijavi se
                                    </button>
                                </form>
                            }

                            <!-- EDIT + DELETE LINKS -->
                            <div class="mt-3 text-center space-x-4">
                                <a asp-action="Edit" asp-route-id="@turnir.Id"
                                   class="inline-block text-accent hover:text-yellow-300 underline">
                                    Uredi turnir
                                </a>

                                <a asp-action="Delete" asp-route-id="@turnir.Id"
                                   class="inline-block text-red-400 hover:text-red-300 underline">
                                    Obriši turnir
                                </a>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="block w-full text-center btn-primary bg-primary hover:bg-secondary text-dark font-bold py-3 rounded-lg">
                                Prijavi se
                            </a>
                        }
                    </div>
                }

                @if (Model.Count == 0)
                {
                    <div class="col-span-2 text-center py-12">
                        <p class="text-gray-custom text-lg">Trenutno nema dostupnih turnira.</p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-action="Create" class="inline-block mt-4 btn-primary bg-primary hover:bg-secondary text-dark font-bold px-6 py-3 rounded-lg">
                                Objavi prvi turnir
                            </a>
                        }
                    </div>
                }

            </div>
        </div>
    </section>

    <footer class="bg-dark text-white text-center py-4">
        <p>&copy; 2025 Sportski turniri. Sva prava pridržana.</p>
    </footer>

</body>
</html>
